    table = null;

    $(document).ready(function() {

        table = $('.data-table').DataTable(
                  {
          columnDefs: [{
            "defaultContent": "-",
            "targets": "_all"
          }]
        })
       
        //$("#example_filter input").first().focus()

    })

    function __$(id){
        return document.getElementById(id);
    }


</script>